     public listSearcher() {
     }
 
     int binarySearch(int search, int[] array) {
-        this.bubbleSort(array);
-        int start = 0;
-        int end = array.length - 1;
-
-        while (start <= end) {
-
-            int middle = (start + end) / 2;
-
-            if (search < array[middle]) {
-                end = middle - 1;
-            }
-
-            if (search > array[middle]) {
